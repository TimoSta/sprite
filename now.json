{
  "name": "sprite",
  "version": 2,
  "alias": ["sprite.timostaudinger.com", "sprite.timo.codes", "sprite.tms.sh"],
  "builds": [
    {
      "src": "packages/app/package.json",
      "use": "@now/static-build",
      "config": {"distDir": "build", "newPipeline": true}
    },
    {
      "src": "packages/api/chart.ts",
      "use": "@now/node@canary",
      "config": {"maxLambdaSize": "40mb"}
    }
  ],
  "routes": [
    {"src": "^/chart/.*\\.png?", "dest": "/packages/api/chart.ts"},
    {"src": "^/(.*)", "dest": "/packages/app/$1"}
  ]
}
